# MongoDB Configuration for TicketDaata Auth Service
# Replace the URI below with your MongoDB Atlas cluster URL

# Example MongoDB Atlas URI format:
# mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority

# Local MongoDB (if using local installation):
# mongodb://localhost:27017/ticketdaata_auth

# Update application.yml with your actual MongoDB URI:
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/ticketdaata_auth?retryWrites=true&w=majority

# You can use this in application.yml as:
# spring:
#   data:
#     mongodb:
#       uri: ${MONGODB_URI:mongodb://localhost:27017/ticketdaata_auth}
#       database: ticketdaata_auth
